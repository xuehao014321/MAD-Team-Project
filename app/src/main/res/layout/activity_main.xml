<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingTop="48dp"
            android:background="@drawable/gray_background">

            <!-- App Logo/Icon -->
            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/img"
                android:scaleType="centerInside" />

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Welcome to"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:alpha="0.9"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="NeighborLink"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/subtitle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Share, Borrow, Connect"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:alpha="0.8"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.01" />

        </LinearLayout>

        <!-- Main Content Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/main_content_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Profile Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/email_tag_background"
                    android:padding="20dp"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/ic_person"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.01" />

                        <TextView
                            android:id="@+id/main_user_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gmail"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Action Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/profile_button"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="View My Profile"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="@drawable/gray_button_background"
                    android:drawablePadding="12dp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01" />

                <!-- Quick Stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/button_outline_background"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/quick_credit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.01" />

                            <ImageView
                                android:id="@+id/credit_info_icon_main"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_info"
                                android:layout_marginStart="4dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?android:attr/selectableItemBackground"
                                android:padding="2dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credit Points"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="0.01" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/button_outline_background"
                        android:padding="16dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/quick_rentals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.01" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active Rentals"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="0.01" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>

