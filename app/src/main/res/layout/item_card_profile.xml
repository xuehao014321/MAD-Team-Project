<?xml version="1.0" encoding="utf-8"?>
<!-- 用户个人资料页面的商品卡片 - 包含删除功能 -->
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background">

        <!-- 商品图片 -->
        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:background="@color/card_background"
            android:src="@drawable/default_image"
            android:contentDescription="Item Image" />

        <!-- 借出封印遮罩层 - 默认隐藏 -->
        <RelativeLayout
            android:id="@+id/borrowedSealOverlay"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#80000000"
            android:visibility="gone"
            android:clickable="false">

            <!-- 封印标签 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">

                <!-- 封印图标 -->
                <ImageView
                    android:id="@+id/sealIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_lock"
                    android:tint="@color/white"
                    android:layout_marginBottom="4dp"
                    android:contentDescription="Borrowed Lock Icon" />

                <!-- BORROWED 文字 -->
                <TextView
                    android:id="@+id/sealText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BORROWED"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:background="@drawable/borrowed_label_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

            </LinearLayout>

        </RelativeLayout>

        <!-- 删除按钮 - 位于右上角 -->
        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_delete"
            android:background="@drawable/circle_background_red"
            android:clickable="true"
            android:focusable="true"
            android:padding="6dp"
            android:tint="@color/white"
            android:contentDescription="Delete Item" />

        <!-- 商品信息区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemImage"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- 商品标题 -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basketball Jersey Set"
                android:textSize="13sp"
                android:textStyle="normal"
                android:textColor="@color/primary_text_color"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp"
                android:layout_marginBottom="4dp" />

            <!-- 商品描述 -->
            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product description"
                android:textSize="11sp"
                android:textColor="@color/secondary_text_color"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp"
                android:layout_marginBottom="6dp" />

            <!-- 价格和距离信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <!-- 商品价格 -->
                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RM20"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FF6B6B" />

                <!-- 距离信息 -->
                <TextView
                    android:id="@+id/distanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500m"
                    android:textSize="11sp"
                    android:textColor="@color/secondary_text_color" />

            </LinearLayout>

            <!-- 状态和点赞区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 商品状态 -->
                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Available"
                    android:textSize="10sp"
                    android:textColor="@color/secondary_text_color"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- 点赞功能区域 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 点赞图标 - 可点击切换点赞状态 -->
                    <ImageView
                        android:id="@+id/likeIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_heart_outline"
                        android:layout_marginEnd="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:tint="@color/secondary_text_color"
                        android:padding="2dp" />

                    <!-- 点赞数量 -->
                    <TextView
                        android:id="@+id/likesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11"
                        android:textSize="10sp"
                        android:textColor="@color/secondary_text_color" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView> 