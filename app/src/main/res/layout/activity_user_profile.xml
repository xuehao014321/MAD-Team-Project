<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Navigation Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/back_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="&lt; Back"
                android:textColor="#6D6D6D"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- Combined User Info and Credit Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- User Info Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/user_avatar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/ic_person"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Username"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.01" />

                            <TextView
                                android:id="@+id/user_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textSize="14sp"
                                android:background="@drawable/email_tag_background"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="4dp"
                                android:textColor="#6D6D6D"
                                android:fontFamily="sans-serif"
                                android:layout_marginStart="12dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/user_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gmail"
                            android:textSize="14sp"
                            android:background="@drawable/email_tag_background"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:textColor="#6D6D6D"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="8dp" />

                <!-- Credit Section - Enhanced -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Credit Title with Level Badge -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credit Score"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.01" />

                        <TextView
                            android:id="@+id/credit_level_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beginner"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/credit_badge_background"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginStart="12dp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Rating and Points Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <RatingBar
                            android:id="@+id/credit_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="3.0"
                            android:stepSize="0.5"
                            android:isIndicator="true"
                            android:progressTint="#FF6B35"
                            android:secondaryProgressTint="#E0E0E0"
                            style="?android:attr/ratingBarStyleSmall" />

                        <TextView
                            android:id="@+id/credit_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50 points"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FF6B35"
                            android:layout_marginStart="12dp"
                            android:fontFamily="sans-serif-medium" />

                        <ImageView
                            android:id="@+id/credit_info_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info"
                            android:layout_marginStart="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="4dp"
                            android:tint="#6D6D6D" />

                    </LinearLayout>

                    <!-- Credit Formula Display -->
                    <TextView
                        android:id="@+id/credit_formula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Formula: 50 + (Published Items × 10)"
                        android:textSize="12sp"
                        android:textColor="#6D6D6D"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="8dp" />

                    <!-- Rental Records Count -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Items:"
                            android:textSize="14sp"
                            android:textColor="#6D6D6D"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/rental_records_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="8dp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="•"
                            android:textSize="14sp"
                            android:textColor="#E0E0E0"
                            android:layout_marginHorizontal="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Next Level:"
                            android:textSize="14sp"
                            android:textColor="#6D6D6D"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/next_level_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 pts"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#FF6B35"
                            android:layout_marginStart="4dp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Rental Items Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rental Items"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.01" />

        <!-- 瀑布流卡片列表 - 使用RecyclerView替代原来的LinearLayout -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingHorizontal="4dp"
            android:paddingVertical="8dp"
            android:scrollbars="none"
            android:background="#F5F5F5" />

    </LinearLayout>

</ScrollView>
