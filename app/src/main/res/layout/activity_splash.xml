<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neighborlink_background">

    <!-- 主要内容容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Logo图片容器 -->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="32dp">

            <!-- 背景圆形 -->
            <View
                android:id="@+id/backgroundCircle"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:background="@drawable/logo_background_circle"
                android:alpha="0" />

            <!-- Logo图片 -->
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:src="@drawable/logoo"
                android:scaleType="centerInside"
                android:alpha="0" />

        </FrameLayout>

        <!-- 应用名称 -->
        <TextView
            android:id="@+id/appNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NeighborLink"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/neighborlink_text_gray"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:shadowColor="@color/neighborlink_dark_teal"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:alpha="0" />

        <!-- 副标题 -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share    Borrow    Connect"
            android:textSize="16sp"
            android:textColor="@color/neighborlink_light_teal"
            android:gravity="center"
            android:alpha="0" />

    </LinearLayout>

    <!-- 底部版权信息 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="© 2024 NeighborLink"
        android:textSize="12sp"
        android:textColor="@color/neighborlink_light_teal" />

</RelativeLayout>

